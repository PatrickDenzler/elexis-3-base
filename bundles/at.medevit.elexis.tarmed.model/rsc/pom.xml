<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <!--<packaging>eclipse-plugin</packaging>-->
    <groupId>ch.elexis.base</groupId>
    <version>3.13.0-SNAPSHOT</version>
    <artifactId>at.medevit.elexis.tarmed.model</artifactId>
    <!-- see http://maven.apache.org/ref/3.0.3/maven-model/maven.html -->
	<build>
		<plugins>
			<plugin>
				<!-- We use this plugin to ensure that our usage of the
			maven-jaxb2-plugin is JDK 8 compatible in absence of a fix
			for https://java.net/jira/browse/MAVEN_JAXB2_PLUGIN-80. -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<id>set-additional-system-properties</id>
						<goals>
							<goal>set-system-properties</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<properties>
						<property>
							<name>javax.xml.accessExternalSchema</name>
							<value>all</value>
						</property>
						<property>
							<name>javax.xml.accessExternalDTD</name>
							<value>all</value>
						</property>
					</properties>
				</configuration>
			</plugin>
        
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
				<configuration>
					<laxSchemaValidation>true</laxSchemaValidation>
					<xjbSources>
						<xjbSource>binding_request500.xjb</xjbSource>
					</xjbSources>
					<packageName>ch.fd.invoice500.request</packageName>
					<sources>
						<source>generalInvoiceRequest_500.xsd</source>
					</sources>
					<outputDirectory>${basedir}/../src-gen/</outputDirectory>
					<clearOutputDir>false</clearOutputDir>
				</configuration>
            </plugin>
            
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
				<configuration>
					<laxSchemaValidation>true</laxSchemaValidation>
					<xjbSources>
						<xjbSource>binding_request500.xjb</xjbSource>
					</xjbSources>
					<packageName>ch.fd.invoice500.response</packageName>
					<sources>
						<source>generalInvoiceResponse_500.xsd</source>
					</sources>
					<outputDirectory>${basedir}/../src-gen/</outputDirectory>
					<clearOutputDir>false</clearOutputDir>
				</configuration>
            </plugin>
        </plugins>
    </build>
</project>